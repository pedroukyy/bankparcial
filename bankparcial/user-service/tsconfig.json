{
  "compilerOptions": {
    // 游늬 Estructura de carpetas
    "rootDir": "./src",
    "outDir": "./dist",

    // 丘뙖잺 Configuraci칩n del entorno
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    
    "types": ["node", "aws-lambda"],


    // 游 Generaci칩n de archivos adicionales
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // 游 Reglas estrictas de tipado
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // 游빞 Limpieza de c칩digo (puedes activarlas m치s adelante si quieres)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,

    // 丘멆잺 Otras configuraciones 칰tiles
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

